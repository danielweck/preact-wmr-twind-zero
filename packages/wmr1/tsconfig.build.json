{
	"$schema": "http://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"noEmit": true,
		"rootDir": "./",
		"rootDirs": ["./", "./public/"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["./public/*"],
			"/*": ["./public/*"],
			"preact": ["../preact-things/types/preact/index.d.ts"],
			"preact/hooks": ["../preact-things/types/preact/hooks/index.d.ts"]
		},
		// "plugins": [
		// 	{
		// 		"name": "@twind/typescript-plugin",
		// 		"tags": ["tw", "twind", "twindTw", "twindShortcut"],
		// 		"attributes": ["class", "className"],
		// 		"styles": ["style", "styled"],
		// 		"debug": true,
		// 		"enable": true
		// 	}
		// ],
		"jsx": "preserve",
		"jsxFactory": "preact.h",
		"jsxFragmentFactory": "preact.Fragment",
		"resolveJsonModule": true
	},
	"typeAcquisition": {
		"enable": true,
		"disableFilenameBasedTypeAcquisition": true,
		"include": ["rollup"]
	},
	"include": ["public/**/*"]

	// "references": [{ "path": "../shared/tsconfig.build.json" }, { "path": "../preact-things/tsconfig.build.json" }]
}
