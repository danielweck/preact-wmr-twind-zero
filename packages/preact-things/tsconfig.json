{
	"$schema": "http://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		"composite": true,
		"declarationMap": true,
		"outDir": "./dist/esm",
		"rootDir": "./src",
		"rootDirs": ["./src"],
		"baseUrl": ".",
		"allowJs": false,
		"checkJs": false,
		"paths": {
			"preact": ["./types/preact/index.d.ts"],
			"preact/hooks": ["./types/preact/hooks/index.d.ts"],
			"preact/test-utils": ["./types/preact/test-utils/index.d.ts"]
		},
		"jsx": "react",
		"jsxFactory": "h",
		"jsxFragmentFactory": "Fragment"
	},
	"include": ["./src"]
}
