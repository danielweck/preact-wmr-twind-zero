{
	"name": "preact-wmr-twind-zero",
	"version": "0.0.0",
	"description": "Preact WMR Twind 'zero runtime' monorepo",
	"homepage": "https://github.com/danielweck/preact-wmr-twind-zero/blob/main/README.md",
	"repository": "github:danielweck/preact-wmr-twind-zero/",
	"bugs": "https://github.com/danielweck/preact-wmr-twind-zero/issues",
	"author": "Daniel Weck (https://github.com/danielweck)",
	"keywords": [
		"Preact",
		"WMR",
		"Twind",
		"SSG",
		"Critical CSS Stylesheet",
		"Performance",
		"Web Vitals"
	],
	"license": "BSD3",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"type": "module",
	"engines": {
		"node": ">=16",
		"pnpm": ">=6"
	},
	"packageManager": "pnpm@6.31.0",
	"scripts": {
		"prepare": "husky install",
		"clean": "pnpm --recursive clean",
		"__test-uvu": "uvu packages/shared \".test\\.ts\" --require tsm --bail --ignore dist",
		"test": "pnpm vitest --run",
		"test:ui": "pnpm vitest --ui --run",
		"test:coverage": "pnpm vitest --coverage --run",
		"build_": "pnpm --recursive --if-present --filter=./packages build",
		"build": "pnpm turbo run build",
		"build-github": "pnpm turbo run build-github",
		"typescript_": "pnpm --recursive typescript",
		"typescript": "pnpm turbo run typescript",
		"serve": "pnpm --filter @preact-wmr-twind-zero/wmr1 serve",
		"start": "pnpm --filter @preact-wmr-twind-zero/wmr1 start",
		"lint:eslint": "eslint \"./**/*.{ts,tsx,js,jsx,mjs,cjs}\"",
		"lint:editorconfig": "eclint check '**/*' '!vitest.config.ts.js' '!package-lock.json' '!yarn.lock' '!pnpm-lock.yaml' '!.husky/**/*' '!.vscode/**/*' '!.git/**/*' '!.github/**/*' '!**/.history/**/*' '!**/.patched/**/*' '!packages/**/dist/**/*' '!**/.tmp/**/*' '!**/node_modules/**/*' '!**/.cache/**/*' '!**/package.json'",
		"lint:prettier": "prettier --check --no-write --loglevel log \"./\"",
		"lint:stylelint": "stylelint \"./packages/**/public/**/*.{html,htm,css,ts,tsx,js,jsx,mjs,cjs}\"",
		"lint": "pnpm lint:editorconfig && pnpm lint:eslint && pnpm lint:stylelint && pnpm lint:prettier",
		"lint-fix:eslint": "cross-env TIMING=1 eslint --cache --fix \"./**/*.{ts,tsx,js,jsx,mjs,cjs}\"",
		"lint-fix:prettier": "prettier --ignore-unknown --write \"./**/!(pnpm-lock.yaml)*.{html,htm,css,json,md,yml,yaml,svg,xml,ts,tsx,js,jsx,mjs,cjs}\"",
		"lint-fix:stylelint": "stylelint --fix \"./packages/**/public/**/*.{html,htm,css,ts,tsx,js,jsx,mjs,cjs}\"",
		"lint-fix": "pnpm lint-fix:eslint && pnpm lint-fix:prettier && pnpm lint-fix:stylelint"
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.1",
		"@commitlint/config-conventional": "^16.2.1",
		"@types/node": "^16.11.25",
		"@typescript-eslint/eslint-plugin": "^5.12.0",
		"@typescript-eslint/parser": "^5.12.0",
		"cpy-cli": "^3.1.1",
		"cross-env": "^7.0.3",
		"eclint": "^2.8.1",
		"eslint": "^8.9.0",
		"eslint-config-preact": "^1.3.0",
		"eslint-config-prettier": "^8.4.0",
		"eslint-import-resolver-typescript": "^2.5.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.4",
		"postcss-html": "^1.3.0",
		"postcss-jsx": "^0.36.4",
		"postcss-syntax": "^0.36.2",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"stylelint": "^14.5.1",
		"stylelint-config-html": "^1.0.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^25.0.0",
		"tslib": "^2.3.1",
		"turbo": "^1.1.3",
		"typescript": "next",
		"vitest": "^0.4.2"
	}
}
