{
	"name": "preact-wmr-twind-zero",
	"repository": "https://github.com/danielweck/preact-wmr-twind-zero/",
	"author": "Daniel Weck (daniel.weck@gmail.com)",
	"private": true,
	"version": "0.0.0",
	"workspaces": [
		"packages/*"
	],
	"type": "module",
	"engines": {
		"node": ">=16",
		"pnpm": ">=6"
	},
	"packageManager": "pnpm@6.30.1",
	"scripts": {
		"prepare": "husky install",
		"clean": "pnpm --recursive clean",
		"build": "pnpm --recursive build",
		"typescript": "pnpm --recursive typescript",
		"lint:eslint": "eslint \"./**/*.{ts,tsx,js,tsx,mjs,cjs}\"",
		"lint:editorconfig": "eclint check '**/*' '!package-lock.json' '!yarn.lock' '!pnpm-lock.yaml' '!.husky/**/*' '!.vscode/**/*' '!.git/**/*' '!.github/**/*' '!**/.history/**/*' '!packages/**/dist/**/*' '!**/.tmp/**/*' '!**/node_modules/**/*' '!**/.cache/**/*' '!**/package.json'",
		"lint:prettier": "prettier --check --no-write --loglevel log \"./\"",
		"lint:stylelint": "stylelint \"./packages/**/public/**/*.{html,htm,css,ts,tsx,js,tsx,mjs,cjs}\"",
		"lint": "pnpm lint:editorconfig && pnpm lint:eslint && pnpm lint:stylelint && pnpm lint:prettier",
		"lint-fix:eslint": "cross-env TIMING=1 eslint --cache --fix \"./**/*.{ts,tsx,js,tsx,mjs,cjs}\"",
		"lint-fix:prettier": "prettier --ignore-unknown --write \"./**/!(pnpm-lock.yaml)*.{html,htm,css,json,md,yml,yaml,svg,xml,ts,tsx,js,tsx,mjs,cjs}\"",
		"lint-fix:stylelint": "stylelint --fix \"./packages/**/public/**/*.{html,htm,css,ts,tsx,js,tsx,mjs,cjs}\"",
		"lint-fix": "pnpm lint-fix:eslint && pnpm lint-fix:prettier && pnpm lint-fix:stylelint"
	},
	"lint-staged": {
		"*.{ts,tsx,js,tsx,mjs,cjs}": [
			"pnpm lint-fix:eslint"
		],
		"!(pnpm-lock.yaml)*.{html,htm,css,json,md,yml,yaml,svg,xml,ts,tsx,js,tsx,mjs,cjs}": [
			"pnpm lint-fix:prettier"
		],
		"*.{html,htm,css,ts,tsx,js,tsx,mjs,cjs}": [
			"pnpm lint-fix:stylelint"
		]
	},
	"devDependencies": {
		"@commitlint/cli": "^16.2.1",
		"@commitlint/config-conventional": "^16.2.1",
		"@types/node": "^16.11.22",
		"@typescript-eslint/eslint-plugin": "^5.11.0",
		"@typescript-eslint/parser": "^5.11.0",
		"cpy-cli": "^3.1.1",
		"cross-env": "^7.0.3",
		"eclint": "^2.8.1",
		"eslint": "^8.9.0",
		"eslint-config-preact": "^1.3.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-import-resolver-typescript": "^2.5.0",
		"eslint-plugin-import": "^2.25.4",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.28.0",
		"eslint-plugin-react-hooks": "^4.3.0",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.3",
		"postcss-html": "^1.3.0",
		"postcss-jsx": "^0.36.4",
		"postcss-syntax": "^0.36.2",
		"prettier": "^2.5.1",
		"rimraf": "^3.0.2",
		"stylelint": "^14.5.0",
		"stylelint-config-html": "^1.0.0",
		"stylelint-config-prettier": "^9.0.3",
		"stylelint-config-standard": "^25.0.0",
		"typescript": "next"
	}
}
